<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/mLinerLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:weightSum="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:fontFamily="@font/poppins_semi_bold"
            android:padding="4dp"
            android:text="| New Member"
            android:textSize="20sp"
            android:textColor="@color/light_teal" />

        <EditText
            android:id="@+id/addMemberPP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:layout_margin="4dp"
            android:background="@drawable/round_edt"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:hint="Premimum Plan"
            android:inputType="number"
            android:textColor="@color/different_black"
            android:textColorHint="@color/text_grey"
            android:textSize="16sp"
          />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="#c0c0c0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mLinerLayout1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/mLinerLayout2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:weightSum="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:src="@drawable/edit"
            />

        <EditText
            android:id="@+id/addMemberName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layout_weight="5"
            android:background="@drawable/round_edt"
            android:fontFamily="@font/poppins_regular"
            android:hint="Member Name"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="@color/different_black"
            android:textColorHint="@color/text_grey"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addMemberName"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="20">

                <TextView
                    android:id="@+id/amPlanA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="A"
                    android:layout_weight="10"
                    android:textSize="16sp"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:textColor="@color/different_black"
                    android:fontFamily="@font/poppins_semi_bold"/>

                <TextView
                    android:id="@+id/amPlanB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="B"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="@color/light_teal"
                    android:textColor="@color/different_black"
                    android:fontFamily="@font/poppins_semi_bold"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="#c0c0c0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mLinerLayout2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/mLinerLayout3"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:weightSum="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:src="@drawable/edit" />

        <EditText
            android:id="@+id/addMemberAccount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/round_edt"
            android:fontFamily="@font/poppins_regular"
            android:hint="Account No"
            android:inputType="number"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:textColor="@color/different_black"
            android:textColorHint="@color/text_grey"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/addMemberOption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_weight="9"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="#c0c0c0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mLinerLayout3" />

    <LinearLayout
        android:id="@+id/mLinerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:weightSum="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="5"
            android:weightSum="20">

            <TextView
                android:id="@+id/addMemberDOO"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:padding="2dp"
                android:layout_weight="10"
                android:background="@drawable/round_edt"
                android:drawableStart="@drawable/calender_icon"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Date Of Opening"
                android:textColor="@color/different_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/addMemberDOM"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="10"
                android:padding="2dp"
                android:background="@drawable/round_edt"
                android:drawableStart="@drawable/calender_icon"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Date Of Maturity"
                android:textColor="@color/different_black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/addMemberDOO"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="5"
            android:weightSum="20">

            <EditText
                android:id="@+id/addMemberAC"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="10"
                android:background="@drawable/round_edt"
                android:fontFamily="@font/poppins_regular"
                android:hint="Amount Collected"
                android:inputType="number"
                android:padding="4dp"
                android:textColor="@color/different_black"
                android:textColorHint="@color/text_grey"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addMemberDOO" />

            <EditText
                android:id="@+id/addMemberAR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="10"
                android:background="@drawable/round_edt"
                android:fontFamily="@font/poppins_regular"
                android:hint="Amount remaining"
                android:inputType="number"
                android:padding="4dp"
                android:textColor="@color/different_black"
                android:textColorHint="@color/text_grey"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/addMemberAC"
                app:layout_constraintTop_toBottomOf="@+id/addMemberDOM" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/addMemberAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/round_edt"
                android:drawableStart="@drawable/location_icon"
                android:fontFamily="@font/poppins_regular"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:padding="4dp"
                android:textColor="@color/different_black"
                android:textColorHint="@color/text_grey"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/addMemberPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/round_edt"
                android:drawableStart="@drawable/phone_icon"
                android:fontFamily="@font/poppins_regular"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="5dp"
                android:textColor="@color/different_black"
                android:textColorHint="@color/text_grey"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#c0c0c0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mLinerLayout" />

    <TextView
        android:id="@+id/addMemberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Create Member"
        android:textSize="20sp"
        android:textColor="@color/light_teal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />
</androidx.constraintlayout.widget.ConstraintLayout>